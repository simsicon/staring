<h4>注册新用户</h4>

<%= form_for @user, url: users_path, html: {class: "signup_form"} do |f| %>
  <%= f.label "用户名" %>
  <%= f.text_field :username %>
  <%= f.label "密码" %>
  <%= f.password_field :password %>
  <%= f.label "密码确认" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "注册" %>
<% end %>
